<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            
            <solid android:color="#FFD9D9D9" />
            
		    <corners
		        android:radius="3dp" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            
		    <gradient
		        android:angle="90"
		        android:endColor="#FFF9F9F9"
		        android:startColor="#FFFAFAFA"
		        android:type="linear" />
            
		    <corners
		        android:radius="3dp" />
            
        </shape>
    </item>

</layer-list>